<!-- Photo Gallery -->
<div class="container my-5">
  <h3 class="fw-bold text-center mb-4 text-primary">Our Workshop</h3>
  <div class="row g-2 gallery">
    {% for img in ['gm1.jpg','gm2.jpg','gm3.jpg','gm4.jpg','gm5.jpg','car1.svg'] %}
      <div class="col-6 col-md-2">
        <div class="gallery-item rounded shadow-sm overflow-hidden">
          <img src="{{ url_for('static', filename='images/' + img) }}" class="img-fluid" alt="Workshop" style="height:150px; object-fit:cover; width:100%;">
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  /* Hero Section Styles */
  .hero-banner {
    position: relative;
    animation: fadeInDown 1s ease-out;
  }
  
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .hero-content {
    animation: fadeInUp 1s ease-out 0.3s both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .btn-warning:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 10px 30px rgba(255, 193, 7, 0.4) !important;
  }
  
  .btn-outline-light:hover {
    background: white;
    color: #0d6efd;
    transform: translateY(-3px);
  }
  
  /* Stats Cards */
  .stat-card {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out both;
  }
  
  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }
  
  .stat-card:hover {
    transform: translateY(-15px) scale(1.05);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15) !important;
  }
  
  .stat-icon {
    transition: transform 0.4s ease;
  }
  
  .stat-card:hover .stat-icon {
    transform: scale(1.2) rotate(5deg);
  }
  
  /* Mission Card */
  .mission-card {
    animation: fadeIn 1s ease-out;
    position: relative;
    overflow: hidden;
  }
  
  .mission-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Service Cards */
  .service-card-modern {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 16px;
    overflow: hidden;
  }
  
  .service-card-modern:hover {
    transform: translateY(-15px);
    box-shadow: 0 25px 50px rgba(13, 110, 253, 0.2) !important;
  }
  
  .service-card-modern:hover .service-overlay {
    opacity: 1 !important;
  }
  
  .service-image-wrapper img {
    transition: transform 0.5s ease;
  }
  
  .service-card-modern:hover .service-image-wrapper img {
    transform: scale(1.1);
  }
  
  /* Customer/Mechanic/Admin Cards */
  .service-card {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 16px;
  }
  
  .service-card:hover {
    transform: translateY(-15px);
    box-shadow: 0 25px 50px rgba(13, 110, 253, 0.2) !important;
  }
  
  .service-icon {
    transition: transform 0.4s ease;
  }
  
  .service-card:hover .service-icon {
    transform: scale(1.2) rotate(-5deg);
  }
  
  /* Testimonial Cards */
  .card {
    transition: all 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1) !important;
  }
  
  /* Metric Cards */
  .metric-card {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid rgba(13,110,253,0.08);
  }
  
  .metric-card:hover {
    transform: translateY(-12px) scale(1.05);
    border-color: #0d6efd;
    box-shadow: 0 20px 45px rgba(13, 110, 253, 0.15) !important;
  }
  
  /* Gallery */
  .gallery-item {
    transition: transform 0.4s ease;
    overflow: hidden;
    border-radius: 12px;
  }
  
  .gallery-item:hover {
    transform: scale(1.08);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .gallery-item img {
    transition: transform 0.4s ease;
  }
  
  .gallery-item:hover img {
    transform: scale(1.15);
  }
  
  /* Smooth Scroll */
  html {
    scroll-behavior: smooth;
  }
</style>
{% endblock %}
